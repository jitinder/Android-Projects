<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicappproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Music"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Songs"
            android:label="@string/menu_songs" />
        <activity
            android:name=".Albums"
            android:label="@string/menu_albums" />
        <activity
            android:name=".Artists"
            android:label="@string/menu_artists" />
        <activity
            android:name=".Playlists"
            android:label="@string/menu_playlists" />
        <activity
            android:name=".BuyMusic"
            android:label="@string/menu_buy" />
        <activity android:name=".NowPlaying"
            android:label="Now Playing" />
    </application>

</manifest>